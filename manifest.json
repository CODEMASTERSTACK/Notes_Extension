{
  "manifest_version": 3,
  "name": "Notes Extension",
  "version": "1.0",
  "description": "A side-panel note taking extension.",
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Notes"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}